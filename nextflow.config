
trace {
    enabled = true
    raw = true
}


process {
    withLabel: 'meta' {
        container = 'nextflow/nextflow:22.04.4'

        errorStrategy = 'retry'
        maxRetries = { params.meta_memory_values.size() - 1 }

        cpus = 1
        memory = { params.meta_memory_values[task.attempt - 1] }
    }
}


profiles {
    local {
        executor.name = 'local'
        executor.cpus = 1

        process {
            withLabel: 'meta' {
                maxRetries = 1
                afterScript = 'rm -rf work'
            }
        }
    }

    index_small {
        params.index = "$baseDir/index-small.txt"
    }
    index_medium {
        params.index = "$baseDir/index-medium.txt"
    }
    index_large {
        params.index = "$baseDir/index-large.txt"
    }
}
